<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinqtv.thinqtv_android">
    <uses-permission android:name="android.permission.INTERNET" />

    <!--This permission is required in order to get JSON files using Hudson's API-->
    <!--Without it, the app cannot access the internet and get outside data-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConferenceActivity"
            android:supportsPictureInPicture="true"
            android:configChanges=
                "screenSize|smallestScreenSize|screenLayout|orientation"
            ></activity>
        <activity android:name=".GetInvolvedApplyNowPage" />
        <activity android:name=".GetInvolved" />
        <activity android:name=".EventWebview" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebViewActivity" />
    </application>

</manifest>