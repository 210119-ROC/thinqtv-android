<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ic_launcher_background"
        tools:context=".MainActivity">

        <!--  HEADER TEXT AT THE TOP OF HOME SCREEN  -->
        <TextView
            android:id="@+id/title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ThinQ.tv"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <!--  CONVERSATIONS THAT MAKE YOU THINQ  -->
        <TextView
            android:id="@+id/desc_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homescreenHeader"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_header" />

        <!--  SCREEN NAME TEXT THAT USER FILLS IN  -->
        <EditText
            android:id="@+id/screenName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/screen_name_hint"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/defaultJoinButton"
            app:layout_constraintStart_toStartOf="@+id/defaultJoinButton" />

        <!--  JOIN BUTTON TO JOIN A CONVERSATION  -->
        <Button
            android:id="@+id/defaultJoinButton"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:onClick="onJoinClick"
            android:text="@string/defaultTryConversation"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".4" />
        <!--  HEADER FOR UPCOMING EVENTS, ITS JUST TEXT  -->
        <TextView
            android:id="@+id/upcoming_events_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:onClick="expandEventsClick"
            android:text="@string/upcoming_events"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <!--  CARROT TO EXPAND THE UPCOMING EVENTS  -->
        <TextView
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:onClick="expandEventsClick"
            android:text="^"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/upcoming_events_header"
            app:layout_constraintStart_toEndOf="@+id/upcoming_events_header"
            app:layout_constraintTop_toTopOf="@+id/upcoming_events_header"
            app:layout_constraintVertical_bias=".4" />

        <!--    SPINNER TO FILTER EVENTS    -->
        <Spinner
            android:id="@+id/eventsSpinner"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:entries="@array/eventFilters"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/upcoming_events_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/upcoming_events_header" />

        <!--  DIVIDER THAT'S RIGHT BELOW UPCOMING EVENTS HEADER  -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_events_header"
            tools:layout_editor_absoluteX="-16dp" />

        <!--  SCROLLVIEW THAT HOLDS ALL OF THE UPCOMING EVENTS  -->
        <ScrollView
            android:id="@+id/upcoming_events_scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_events_header">

            <!--  THIS IS THE LINEAR LAYOUT THAT GETS PROPAGATED WITH THE UPCOMING EVENTS TEXTVIEWS  -->
            <LinearLayout
                android:id="@+id/upcoming_events_linearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/loading_events"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp" />

                <TextView
                    android:id="@+id/loading_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="Error : Unable to load conversations"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/profileB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toEndOf="@+id/screenName"
            app:layout_constraintTop_toBottomOf="@+id/desc_header"
            android:onClick="profileClick"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#fafafa" />

</androidx.drawerlayout.widget.DrawerLayout>