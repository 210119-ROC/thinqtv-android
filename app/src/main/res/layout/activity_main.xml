<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ic_launcher_background"
        tools:context=".MainActivity">

    <!--  HEADER TEXT AT THE TOP OF HOME SCREEN  -->

        <!--  GOLD BRAIN ICON IN THE HEADER  -->

        <TextView
            android:id="@+id/title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ThinQ.tv"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--  SCREEN NAME TEXT THAT USER FILLS IN  -->
        <TextView
            android:id="@+id/desc_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="@string/homescreenHeader"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/screenName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/screen_name_hint"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/defaultJoinButton"
            app:layout_constraintStart_toStartOf="@+id/defaultJoinButton" />

        <!--  JOIN BUTTON TO JOIN A CONVERSATION  -->

        <!--  HEADER FOR UPCOMING EVENTS, ITS JUST TEXT  -->
        <Button
            android:id="@+id/defaultJoinButton"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginBottom="275dp"
            android:background="@drawable/rounded_button"
            android:onClick="onJoinClick"
            android:text="@string/defaultTryConversation"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/upcoming_events_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="200dp"
            android:onClick="expandEventsClick"
            android:text="@string/upcoming_events"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--  DIVIDER THAT'S RIGHT BELOW UPCOMING EVENTS HEADER  -->
        <TextView
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:onClick="expandEventsClick"
            android:text="^"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/upcoming_events_header"
            app:layout_constraintStart_toEndOf="@+id/upcoming_events_header"
            app:layout_constraintTop_toTopOf="@+id/upcoming_events_header"
            app:layout_constraintVertical_bias=".4" />

        <Spinner
            android:id="@+id/eventsSpinner"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:entries="@array/eventFilters"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/upcoming_events_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/upcoming_events_header" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_events_header"
            tools:layout_editor_absoluteX="-16dp" />

    <!--  CARROT FOR EXPANDING UPCOMING EVENTS  -->

        <!--  SCROLLVIEW THAT HOLDS ALL OF THE UPCOMING EVENTS  -->
        <ScrollView
            android:id="@+id/upcoming_events_scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_events_header">

    <!--    THIS IS THE LINEAR LAYOUT THAT GETS PROPAGATED WITH THE UPCOMING EVENTS TEXTVIEWS    -->
            <LinearLayout
                android:id="@+id/upcoming_events_linearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loading_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="Loading..."
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

    <!--  Spinner to filter upcoming events  -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#fafafa" />

</androidx.drawerlayout.widget.DrawerLayout>