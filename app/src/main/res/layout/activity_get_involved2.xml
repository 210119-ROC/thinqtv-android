<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getInvolved2">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="559dp"
        android:background="#F2EBE4"
        android:paddingBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="We are seeking Founding Members for our new YourOnlineMom Board of Directors "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:text="Help form a Coalition of Organizations who have a stake in creating a culture where online harassment is called out "
                android:textAlignment="center"
                android:textColor="#8C1D40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:text="Mission: Create a culture where harassment in live online video is called out "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:text="We are starting the process of forming YourOnlineMom as a nonprofit and seeking Founding Board Members. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:textColor="#E0D2C3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:text="Anyone who has questions is encouraged to drop in to any Your Online Mom session scheduled on the ThinQ.tv home page "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0D2C3"
                android:textColor="#E0D2C3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Required Qualifications:"
                android:textColor="#8C1D40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Experience in planning and implementing advocacy strategies and campaigns to support an issue or cause. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Connected leader in tech or feminist communities who can leverage networks and resources in support of efforts to positively impact the live video tech culture. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Significant presence in social media, as evidenced by having written well-researched content. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose of the YourOnlineMom Board of Directors: "
                android:textColor="#8C1D40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carry out the mission of YourOnlineMom by: "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Advocating for what we're doing to combat online sexual harassment via your articles, speaking, social media "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Inviting relevant organizations to join a coalition "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Attend virtual Board meetings, Coalition meetings, and drop in to occasional Online Parent sessions hosted by ThinQ.tv members at least once per month "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Fundraising "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Board terms last for three years and board members can serve for up to three consecutive terms. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Apply to be on the Board of Directors: "
                android:textColor="#8C1D40"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Drop in to any of the Your Online Mom Conversations by Dr. Lisa Schaefer listed on the ThinQ.tv schedule so we can meet you "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Send resume and cover letter to info@ThinQ.tv. Cover letter must describe your goals or mission for participating on the Board. "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/space9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:onClick="goHome"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>